{# extends: Héritage d'un template parent #}
{% extends 'base.html.twig'  %}
{% block body %}
    <div class="row">
    <div class="row">
		<div class="col">
			<h1>{{ product.name }}</h1>
		</div>
	</div>
        <p>
            <div class="col-sm-3">
                <img src="{{ asset('img/product/'~ product.image) }}" class="img-fluid" alt=""/>
            </div class="col-sm-9">
        </p>
        <p>{{product.description}}</p>
        <p class="font-weight-bold">{{product.price}}€</p>
        </div>
    </div>
{% endblock %}
